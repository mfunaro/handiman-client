<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h3>
        Rounds
        <h6><span class="pull-right"><a class="create-link" {{action 'showModal' 'components/round-create-modal' round}}>Add round</a></span></h6>
      </h3>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>
              Score
            </th>
            <th>
              Holes
            </th>
            <th>
              Differential
            </th>
            <th>
              Course
            </th>
            <th>
              Tee
            </th>
          </tr>
        </thead>
        <tbody>
          {{#each user.rounds as |round|}}
          <tr>
            <td>
              {{round.score}}
            </td>
            <td>
              {{round.holes}}
            </td>
            <td>
              {{round.differential}}
            </td>
            <td>
              {{round.tee.course.name}}
            </td>
            <td>
              {{round.tee.name}}
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
